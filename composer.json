	"description" : "a simple IRC bot in php",
	"homepage"    : "http://github.com/henderjon/honkerbot",
	"license"     : "BSD-3-Clause",
	"authors"     : [
		{
			"name"     : "Jon Henderson",
			"role"     : "Developer",
			"homepage" : "http://github.com/henderjon"
		}
	],
	"support" : {
		"irc" : "irc://irc.freenode.org/henderjon"
